<hbox id="pageMechanical" text="Mechanical" width="100%" height="100%">
    <vbox>
        <button id="bAdd" text="Add"/>
        <button id="bRemove" text="Remove"/>
        <button id="bMove" text="Move"/>
        <button id="bSelect" text="Select"/> <!-- TODO: add icons -->
    </vbox>
    <KeyboardContainer id="cMechanical"/>

    <PropertyEditor id="propEditor" width="200">
        <PropertyTitle text="General"/>
        <PropertyItem id="p_id" text="Id">
                <IntegerEditor minimum="0" maximum="1000" />
        </PropertyItem>
        <PropertyText id="p_name" text="Name" />
        <PropertyTitle text="Position"/>
            <PropertyItem id="p_x" text="X">
                <FloatEditor maximum="1000" step="0.05"/>
            </PropertyItem>
            <PropertyItem id="p_y" text="Y">
                <FloatEditor maximum="1000" step="0.05"/>
            </PropertyItem>
            <PropertyItem id="p_width" text="width">
                <FloatEditor minimum="0.5" maximum="1000" step="0.25" />
            </PropertyItem>
            <PropertyItem id="p_height" text="height">
                <FloatEditor minimum="0.5" maximum="1000"  step="0.25" />
            </PropertyItem>
        <PropertyTitle text="Electrical"/>
        <PropertyItem id="p_row" text="row">
                <IntegerEditor maximum="1000" />
        </PropertyItem>
        <PropertyItem id="p_column" text="column">
                <IntegerEditor maximum="1000" />
        </PropertyItem>
    </PropertyEditor>
    <!--Toolbox-->
</hbox>
