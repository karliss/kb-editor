<hbox id="pageWiring" text="Wiring" width="100%" height="100%">
    <vbox>
        <onewaybutton id="TODO" text="TODO"/>
        <label text="View"/>
        <dropdown text="Color" id="colorSelect"/>
        <label text="Quick set"/>
        <dropdown id="quickSetMode">
            <data>
                <item value="none" id="none" />
                <item value="row" id="row"/>
                <item value="column" id="column"/>
            </data>
        </dropdown>
    </vbox>
    <vbox height="100%">
        <checkbox id="checkHasMatrixRows" text="Separete electric row numbers" width="250"/>
        <hbox>
            <button id="addProperty" text="Add property"/>
            <button id="removeProperty" text="Delete property"/>
        </hbox>
        <hbox>
            <button id="btnAddRow" text="Add row"/>
            <button id="btnRemoveRow" text="Delete row"/>
        </hbox>
        <WireMappingTable id="rowTable" height="50%" width="100%">

        </WireMappingTable>
        <hbox>
            <button id="btnAddColumn" text="Add column"/>
            <button id="btnRemoveColumn" text="Delete column"/>
            <button text="Swap â‡…"/>
        </hbox>
        <WireMappingTable id="colTable" height="50%" width="100%">

        </WireMappingTable>
    </vbox>
    <vbox width="100%" height="100%">
        <KeyboardContainer id="keyView" height="50%"/>
        <hbox>
            <label text="rows: "/>
            <label text="" id="labelRows"/>
            <label text="columns: "/>
            <label text="" id="labelColumns"/>
            <label text="conflicts: "/>
            <label text="N" id="labelConflicts"/>
            <label text="N" id="labelUnassigned"/>
        </hbox>
        <Grid id="matrixGrid" height="50%" width="100%"/>
    </vbox>

    <PropertyEditor id="propEditor" width="200" height="100%">
        <vbox text="Electrical">
            <PropertyItem id="p_row" text="row">
                <IntegerEditor id="pRowEditor" maximum="1000" />
            </PropertyItem>
            <PropertyItem id="p_column" text="column">
                <IntegerEditor id="pColumnEditor" maximum="1000" />
            </PropertyItem>
        </vbox>
    </PropertyEditor>
    <!--Toolbox-->
</hbox>
