<vbox style="padding: 5px;" height="100%" width="100%">
  <menubar id="mainMenu" width="100%">
    <menu text="File">
      <menu text="Import" id="importSubmenu" width="350"/>
      <menu text="Export" id="exportSubmenu"/>
      <menu text="Export configure" id="exportConfigureSubmenu">
        <menu-item text="Export QMK layout macro" id="exportQMKLayoutMacros"/>
      </menu>
    </menu>
    <menu text="Edit" id="editMenu">
      <menu-item text="Undo" id="undoMenuButton" shortcutText="Ctrl+Z" />
      <menu-item text="Redo" id="redoMenuButton" shortcutText="Ctrl+Y" />
    </menu>
  </menubar>
  <hbox>
    <button text="Undo" id="undoButton"/>
    <button text="Redo" id="redoButton"/>
  </hbox>
  <style>
		.selected {
            background-color: #404040;
		}
  </style>
  <tabview id="tabList" width="100%" height="100%">
  </tabview>
</vbox>
